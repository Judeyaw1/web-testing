{
  "name": "grabdocs-e2e",
  "version": "1.0.0",
  "description": "End-to-End Testing for GrabDocs.com using Playwright",
  "main": "index.js",
  "scripts": {
    "test:e2e": "playwright test",
    "test:headed": "playwright test --headed",
    "test:smoke": "playwright test --grep @smoke",
    "test:functional": "playwright test --grep @functional",
    "test:nonfunctional": "playwright test --grep @nonfunctional",
    "test:a11y": "playwright test --grep @a11y",
    "test:security": "playwright test --grep @security",
    "test:recovery": "playwright test --grep @recovery",
    "test:regression": "playwright test --grep @regression",
    "report": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/node": "^20.11.30",
    "dotenv": "^16.4.5",
    "@axe-core/playwright": "^4.10.1"
  }
}